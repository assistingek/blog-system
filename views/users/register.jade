doctype html
html
	head
		title= 註冊
	body
		div(style='float:left;margin:10px;')
			a(href='/') 首頁
	body(background="http://i3.sinaimg.cn/dongman/pictcol/2007-11-20/U2319P55T4D134715F50DT20071120173544_600small.jpg",style='background-repeat : no-repeat;background-size:1000px')
